<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GoTour.MVVM.View.DetailTourView" 
             xmlns:vm="clr-namespace:GoTour.MVVM.ViewModel"
             NavigationPage.HasNavigationBar="True"
             Title="{Binding SelectedTour.name}">
    <ContentPage.BindingContext>
        <vm:DetailTourViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <Frame
                            BackgroundColor="White"
                            HasShadow="True"
                            Margin="5"
                            CornerRadius="10"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand"
                            Padding="0"
                        >
                
                <Grid>
                    <Image Source="{Binding SelectedTour.imgSource[0]}"
                                   HorizontalOptions="FillAndExpand"
                                   VerticalOptions="FillAndExpand"
                                   Aspect="AspectFill"                           
                           />
                    
                    <StackLayout VerticalOptions="EndAndExpand"
                                 HorizontalOptions="Fill"                            
                                 BackgroundColor="DimGray" 
                                 Opacity="0.8"
                                 Margin="10, 0, 10 ,30"
                                 Padding="10,10,10,10"
                                 Orientation="Horizontal"
                                 HeightRequest="150"
                                 
                                 >
                       
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                        </Grid>
                        <StackLayout  Grid.Column="0" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                            <StackLayout>
                            <Label
                                    Text="{Binding SelectedTour.name}"
                                    TextColor="NavajoWhite"
                                    FontSize="25"
                                    FontAttributes="Bold"
                                    Margin="0,0,0,0"
                                    HorizontalOptions="CenterAndExpand"
                        />
                                <Line HeightRequest="3"
                                      Margin="20,0,20,10"
                                      BackgroundColor="White"></Line>
                            <StackLayout
                            Orientation="Horizontal" 
                            Margin="0,0,5,10"
                            HorizontalOptions="CenterAndExpand">
                              
                                <Label
                                        Text="{Binding SelectedTour.startTime,StringFormat='{}Khởi hành: {0}' }"
                                        TextColor="White"
                                        FontSize="Medium"       
                                        FontAttributes="Bold"
                                        Margin="5, 0, 0, 0"/>
                                   
                            </StackLayout>
                                <StackLayout Orientation="Horizontal" HorizontalOptions="StartAndExpand">
                                    <Label 
                                     Text="$220"
                                    TextColor="White"
                                    FontSize="25"
                                    FontAttributes="Bold"
                                    Margin="30,0,0,0"
                                    HorizontalOptions="StartAndExpand"></Label>
                                    <Label 
                                     Text="{Binding SelectedTour.duration}"
                                    TextColor="White"
                                    FontSize="15"
                                    FontAttributes="Bold"
                                    Margin="30,0,0,0"
                                    VerticalOptions="CenterAndExpand"
                                        HorizontalOptions="CenterAndExpand"></Label>
                                </StackLayout>
                               
                            </StackLayout>
                        </StackLayout>
                        <StackLayout Grid.Column="1" 
                                     VerticalOptions="CenterAndExpand"
                                     HorizontalOptions="EndAndExpand"
                                     >
                            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                                <Label
                                    Text="5"
                                    TextColor="Gold"
                                    FontSize="20"
                                    FontAttributes="Bold"
                                    Margin="0,0,0,0"
                                    
                                    
                        />
                                <Image Source="https://cdn3.vectorstock.com/i/1000x1000/31/77/star-icon-isolated-on-background-modern-simple-sp-vector-21073177.jpg"
                                       HeightRequest="30"
                                       WidthRequest="30"></Image>
                            </StackLayout>
                           
                            <Button Text="Đặt ngay"
                                    TextTransform="Uppercase"
                                    Opacity="1"
                                    TextColor="White"
                                    BackgroundColor="Goldenrod"
                                    VerticalOptions="CenterAndExpand"
                                    Margin="0,10,0,0"
                                    CornerRadius="10"></Button>
                            <!--<Button Text="Xem chi tiết"
                                    TextTransform="Uppercase"
                                    Opacity="1"
                                    TextColor="White"
                                    BackgroundColor="Black"
                                    VerticalOptions="CenterAndExpand"
                                    Margin="0,5,0,0"
                                    Command="{Binding OpenDetailTour}"
                                    CornerRadius="10"></Button>-->
                            <Button Text="Xem lich trinh"
                                    TextTransform="Uppercase"
                                    Opacity="1"
                                    TextColor="White"
                                    BackgroundColor="Black"
                                    VerticalOptions="CenterAndExpand"
                                    Margin="0,5,0,0"
                                    Command="{Binding OpenDetailTour1}"
                                    CornerRadius="10"></Button>
                        </StackLayout>
                        
                    </StackLayout>
                    <Image Source="heartIcon.png"
                           Margin="10"
                           HeightRequest="50"
                           WidthRequest="50"
                           HorizontalOptions="EndAndExpand"
                           VerticalOptions="StartAndExpand"
                           ></Image>
                    <ImageButton Command="{Binding NavigationBack}" 
                                 Source="backbutton.png" 
                                 HeightRequest="40" 
                                 WidthRequest="60"
                                 CornerRadius="10" 
                                 HorizontalOptions="StartAndExpand" 
                                 VerticalOptions="StartAndExpand"
                                 BackgroundColor="Transparent" 
                                 Margin="0, 10 , 0, 0">
                    </ImageButton>

                </Grid>
            </Frame>
        </StackLayout>


    </ContentPage.Content>
</ContentPage>